{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "indent": [true, "spaces", 4],
        "interface-name": [true, "never-prefix"],
        "no-var-requires": false, // needed for CSS Modules; const styles = require('./style.css')
        "trailing-comma": [
          true,
          {
            "multiline": {
              "objects": "always",
              "arrays": "always",
              "functions": "never"
            },
            "singleline": "never",
            "esSpecCompliant": true
          }
        ]
    }
}